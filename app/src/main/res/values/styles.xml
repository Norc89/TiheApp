<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="pressEffectBackground">?attr/selectableItemBackground</item>
        <item name="pressEffectForeground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TranslucentStatusBarTheme" parent="AppTheme.NoActionBar">
        <!-- Android version specific style -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTiny" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="TextSmall" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="TextNormal" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextAboveNormal" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_above_normal</item>
    </style>

    <style name="TextLarge" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextBelowBig" parent="BaseTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBig" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextHuge" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="TextAboveHuge" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_above_huge</item>
    </style>

</resources>
