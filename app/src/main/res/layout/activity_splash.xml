<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <se.leiflandia.kittprogressbar.KittProgressBar
        android:layout_width="@dimen/activity_splash_progress_width"
        android:layout_height="@dimen/activity_splash_progress_height"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/material_large_margin"/>

    <TextView
        style="@style/TextLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/theme_inactive_color"
        android:gravity="center"
        android:layout_gravity="center" />

</FrameLayout>