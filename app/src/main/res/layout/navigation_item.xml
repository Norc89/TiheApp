<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_small_margin"
    android:layout_marginRight="@dimen/material_small_margin"
    android:layout_marginTop="@dimen/material_small_margin"
    android:padding="@dimen/material_small_margin"
    android:addStatesFromChildren="true"
    android:background="@color/navigation_item_bg"
    android:foreground="?pressEffectForeground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/navigation_imageview"
        android:layout_width="@dimen/navigation_item_image_size"
        android:layout_height="@dimen/navigation_item_image_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/material_small_margin">

        <TextView
            style="@style/TextNormal"
            android:id="@+id/navigationItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:textAllCaps="true"
            tools:text="Item 1"
            android:textColor="@color/theme_text_color"
            android:layout_marginBottom="@dimen/material_small_margin"/>

        <TextView
            style="@style/TextSmall"
            android:id="@+id/navigationItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lines="3"
            android:minHeight="@dimen/navigation_item_description_text_min_height"
            tools:text="Item 1"
            android:ellipsize="end"
            android:textColor="@color/theme_text_color"/>

    </LinearLayout>

</LinearLayout>