<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.si.tihe.tiheapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/TranslucentStatusBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activity.TabActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activity.SimpleActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activity.TranslucentStatusBarActivity"
            android:theme="@style/TranslucentStatusBarTheme"/>

        <activity android:name=".activity.CustomViewActivity"
            android:theme="@style/TranslucentStatusBarTheme"/>

    </application>

</manifest>